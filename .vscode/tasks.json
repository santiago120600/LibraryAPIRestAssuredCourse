{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "podman: start machine",
			"type": "shell",
			"command": "podman machine start podman-machine-default",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "podman compose: up",
			"type": "shell",
			"command": "podman",
			"args": [
				"compose",
				"up",
				"--build",
				"-d"
			],
			"problemMatcher": []
		},
		{
			"label": "podman compose: down",
			"type": "shell",
			"command": "podman",
			"args": [
				"compose",
				"down"
			],
			"problemMatcher": []
		}
	]
}